{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='
    color-{{ section.settings.color_scheme }} tw-flex tw-justify-center section-{{ section.id }}-padding
    {% unless section.settings.full_width %}page-width tw-px-0{% endunless %}
  '>
  <div class='
      tw-grid tw-grid-cols-1 md:tw-grid-cols-3 tw-gap-5 tw-text-xs
      {% unless section.settings.no_page_padding %}tw-px-page_mobile md:tw-px-page_desktop{% endunless %}
    '>
    <div class='tw-flex tw-items-center tw-space-x-2'>
      <iconify-icon
        width='20'
        icon='bi:box-seam'
        class='tw-hidden sm:tw-inline'
      ></iconify-icon>
      <span>Free Shipping</span>
    </div>

    <div class='tw-flex tw-items-center tw-space-x-2'>
      <iconify-icon
        width='20'
        icon='clarity:shield-check-line'
        class='tw-hidden sm:tw-inline'
      ></iconify-icon>
      <span>
        free returns <br>
        no question asked</span
      >
    </div>

    <div class='tw-flex tw-items-center tw-space-x-2'>
      <iconify-icon
        width='20'
        icon='akar-icons:sparkles'
        class='tw-hidden sm:tw-inline'
      ></iconify-icon>
      <span>
        Lifetime <br>
        Warranty
      </span>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Decor gaurantee",
  "presets": [
    {
      "name": "Decor gaurantee"
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent-1"
        },
        {
          "value": "accent-2",
          "label": "Accent-2"
        },
        {
          "value": "background-1",
          "label": "Background-1"
        },
        {
          "value": "background-2",
          "label": "Background-2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "accent-1",
      "label": "Color scheme",
      "info": "Choose color scheme"
    },

    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "no_page_padding",
      "label": "No padding horizontal",
      "default": true
    },

    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    }
  ]
}
{% endschema %}
